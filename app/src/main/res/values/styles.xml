<resources>
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorButtonNormal">@color/accent</item>
    </style>


<style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:windowBackground">@color/icons</item>
        <item name="android:textColorTertiary">@color/primary_text</item>
        <!-- Other setup ...... -->
        <!-- Color control setup-->
        <item name="colorControlNormal">@color/accent_light</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="colorControlActivated">@color/accent_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSwitchThumbNormal">@color/accent_light</item>





        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>
